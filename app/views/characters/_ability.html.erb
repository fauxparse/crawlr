<%= form.fields_for ability.stat, ability do |f| %>
  <%= content_tag :div, class: "ability", data: { ability: ability.stat } do %>
    <%= f.hidden_field :strategy %>
    <header>
      <%= content_tag :abbr, ability.abbreviation, title: ability %>
      <%= content_tag :small, signed(ability.modifier), class: "modifier" %>
    </header>
    <%= content_tag :div, ability.score, class: "score" %>
    <footer>
      <%= ability_base_field f, ability %>
      <%= content_tag :div, signed(ability.bonus), class: "bonus" %>
    </footer>
  <% end %>
<% end %>
